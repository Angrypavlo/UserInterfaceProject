<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatepart.CreateNewList">

    <EditText
        android:id="@+id/listName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of a list"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <ListView
        android:id="@+id/allListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="45dp"
        android:choiceMode="multipleChoice"
        android:dividerHeight="3dp"
        app:layout_constraintTop_toBottomOf="@+id/listName"
        app:layout_constraintBottom_toTopOf="@+id/saveList"
        app:layout_constraintVertical_bias="0.483"
        tools:layout_editor_absoluteX="0dp"></ListView>

    <Button
        android:id="@+id/saveList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>